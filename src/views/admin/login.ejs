<!DOCTYPE html>
<html lang="es">
    <!-- CÓDIGO TEMPORAL HASTA QUE ESTÉ EL PARTIAL DEL HEAD -->
    <head>
        <title>INGRESAR</title>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/imports.css">
        <link rel="stylesheet" href="/css/pages/login.css">
        <link rel="shortcut icon" href="/img/branding/isotype.svg" type="image/x-icon">
    </head>

    <body>
        <!-- CÓDIGO TEMPORAL HASTA QUE ESTÉ EL PARTIAL DEL HEADER -->
        <!-- HEADER -->
        <header>
            <nav class="navbar container">
                <figure class="navbar__logo--header">
                    <a href="/">
                        <img src="../../img/branding/logo_light_horizontal.svg" 
                             alt="Isotipo de la tienda FunkoShop">
                    </a>
                </figure>

                <!-- MENU -->
                <ul class="navbar__menu--admin">
                    <li class="navbar__item">
                        <a class="navbar__link" 
                            href="/shop">VER TIENDA</a>
                    </li>
                    <li class="navbar__item">
                        <a class="navbar__link"
                            href="/admin">ADMIN</a>
                    </li>
                    <li class="navbar__item">
                        <a class="navbar__link"
                            href="/">SALIR</a>
                    </li>
                </ul>
            </nav>
        </header>

        <!-- MAIN -->
        <main class="main-container">
            <section class="login__content container">
                <h2 class="login__title">INGRESAR A MI CUENTA</h2>

                <form id="login__form"
                      class="form__container" 
                      action="/auth/login" 
                      method="POST">
                    
                    <!-- Email -->
                    <div class="login-form__input">
                        <label class="form__label"
                               for="email">Email:</label>
                        <input id="email"
                               class="form__email" 
                               type="email" 
                               name="email" 
                               placeholder="johndoe@email.com" 
                               required>
                    </div>

                    <!-- Contraseña -->
                    <div class="login-form__input">
                        <label class="form__label"
                               for="password">Contraseña:</label>
                        <input id="password"
                               class="form__password" 
                               type="password" 
                               name="password" 
                               placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;" 
                               required>
                    </div>

                    <!-- Ingresar -->
                    <div class="login-form__content">
                        <button class="form__button" 
                                type="submit">Ingresar</button>

                        <label class="form__label--terms"
                               for="remember-me">
                            <input id="remember-me" 
                                   class="form__checkbox"
                                   type="checkbox" 
                                   name="remember">
                            Recordarme
                        </label>
                    </div>

                    <div class="login-form__input--remember">
                        <a class="form__blue-label" 
                           href="#">Olvidé mi contraseña</a>
                    </div>
                </form>
            </section>
        </main>

        <!-- CÓDIGO TEMPORAL HASTA QUE ESTÉ EL PARTIAL DEL FOOTER -->
        <!-- FOOTER -->
        <footer>
            <nav class="navbar container">
                <ul>
                    <li>
                        <a class="navbar__link"
                            href="/shop">SHOP</a>
                    </li>
                    <li>
                        <a class="navbar__link"
                            href="/auth/register">REGISTRARSE</a>
                    </li>
                    <li>
                        <a class="navbar__link"
                            href="/auth/login">INGRESAR</a>
                    </li>
                    <li>
                        <a class="navbar__link" 
                            href="/contact">CONTACTO</a>
                    </li>
                </ul>

                <figure class="navbar__logo--footer">
                    <a href="/">
                        <img src="../../img/branding/isotype.svg" 
                                alt="Isotipo de la tienda FunkoShop">
                    </a>
                </figure>
            </nav>
            <p class="footer__copy">All rights reserved 2023 - Funkoshop&copy;</p>
        </footer>

        <script src="https://code.iconify.design/2/2.1.0/iconify.min.js"></script>
    </body>
</html>
